@model ASP_DB_TESTS.Models.Book

<form method="post" asp-action="AddBook">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="BookName">Name</label>
            <input class="form-control" asp-for="BookName" placeholder="Book Name">
            <span asp-validation-for="BookName" class="text-danger" />

        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="AuthorName">Author</label>
            <input class="form-control" asp-for="AuthorName" placeholder="Book Author">
        </div>
    </div>



    <button type="submit" class="btn btn-primary">Add Book</button>
</form>

@* The following script is for clientside validation *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}